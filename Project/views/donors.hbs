<div class="container" style="width: 75%;">

    <div class="row">

        <div class="col-6">
            <h1>Donors</h1>
        </div>
        <div class="col-6 d-flex justify-content-end"><a href="/adddonor" type="button"
                class="btn btn-danger align-self-center">+ Add Donor</a></div>

    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID Number</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col" class="text-center">Blood Group</th>
                <th scope="col" class="text-end">Action</th>

            </tr>
        </thead>
        <tbody>
            {{#each donors}}
            
                <tr>
                    <th scope="row">{{this.ID_number}}</th>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td class="text-center">{{this.blood_group}}</td>

                    <td scope="col" class="text-end">

                        <a href="/view/{{this.ID_number}}" type="button" class="btn btn-dark btn-small bg-danger" style="border: 0;"><i class="bi bi-eye">
                                View</i></a>
                        <a href="/editdonor/{{this.ID_number}}" type="button" class="btn btn-dark btn-small bg-danger" style="border: 0;"><i class="bi bi-pencil"></i>
                            Edit</a>
                        <a href="/deletedonor/{{this.ID_number}}" type="button" class="btn btn-dark btn-small bg-danger" onclick="return confirm('Do you want to delete the donor for sure ?')" style="border: 0;"><i class="bi bi-trash">
                                Delete</i>
                        </a>



                    </td>

                </tr>


            
            {{/each}}

        </tbody>
    </table>
</div>